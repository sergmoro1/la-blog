{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "runtimeExecutable": "/php",
            "pathMappings": {
                "/app": "${workspaceFolder}/app"
            },
            "ignore": [
                "**/vendor/**/*.php"
            ],
            "log": true
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9003,
            "externalConsole": false
        }
    ]
}